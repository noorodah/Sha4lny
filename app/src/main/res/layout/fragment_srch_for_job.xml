<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    tools:context=".srchForJobFrag">
<LinearLayout
    android:layout_marginTop="10dp"
    android:background="@drawable/search_job_main"
    android:elevation="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="30dp"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/search_tools_background"
        android:elevation="10dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:gravity="end">
        <Spinner
            android:paddingEnd="0dp"
            android:id="@+id/spnrSrchJobs"
            android:layout_width="60dp"
            android:backgroundTint="@color/Transparent"
            android:layout_height="wrap_content"
            android:entries="@array/jobs_array"
            />
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="نوع العمل :"
            android:layout_gravity="end"/>



    </LinearLayout>
    <LinearLayout

        android:background="@drawable/search_tools_background"
        android:elevation="10dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:paddingTop="40dp"
        android:gravity="end">
        <Spinner
            android:backgroundTint="@color/Transparent"
            android:paddingEnd="0dp"
            android:id="@+id/spnSrchCity"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:entries="@array/cities_array"
            />
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:text="مكان العمل :"
            android:layout_gravity="end"/>



    </LinearLayout>
</LinearLayout>
    <Button
        android:padding="10dp"
        android:background="@drawable/search_job_main"
        android:layout_gravity="center"
        android:id="@+id/btnSrchForJob"
        android:layout_width="wrap_content"
        android:elevation="20dp"
        android:layout_marginTop="100dp"
        android:textColor="#976ad7"
        android:drawableStart="@drawable/search_vector"
        android:drawablePadding="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="            البحث"
        android:gravity="center"


        />
</LinearLayout>