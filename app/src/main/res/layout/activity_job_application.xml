<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".jobApplication"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/main_background"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="30dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="vertical">
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:background="@drawable/contact_list_background"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="20dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtJobTitleApp"></TextView>
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عنوان العمل : "
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:background="@drawable/job_application"
        android:elevation="2dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtJobType"></TextView>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نوع العمل : "
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"

        android:background="@drawable/contact_list_background"
        android:elevation="3dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtOpenJob"></TextView>
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المركز الشاغر : "
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:background="@drawable/job_application"
        android:elevation="2dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtJobLoc"></TextView>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مكان العمل : "
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:background="@drawable/contact_list_background"
        android:elevation="3dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtWorkingHours"></TextView>
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عدد الساعات "
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:background="@drawable/job_application"
        android:elevation="2dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtWorkingTime"></TextView>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="وقت العمل :"
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:background="@drawable/contact_list_background"
        android:elevation="3dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPaymentMethod"></TextView>
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="طريقة الدفع :"
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:background="@drawable/job_application"
        android:elevation="2dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSalary"></TextView>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاجرة اليومية : "
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:background="@drawable/contact_list_background"
        android:elevation="3dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
         android:textColor="@color/black"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtComment"></TextView>
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تعليق : "
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
    <Button
        android:layout_marginVertical="20dp"
        android:background="@drawable/button_post"
        android:layout_width="wrap_content"
        android:ems="10"
        android:textColor="#8361d2"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:id="@+id/btnShowInterest"
        android:text="اظهر اهتمامك"></Button>
    </LinearLayout>

</LinearLayout>
</ScrollView>