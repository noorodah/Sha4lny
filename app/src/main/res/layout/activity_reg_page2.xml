<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".register.regPage2Activity"
android:background="@drawable/main_background"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_gravity="center_vertical"
    android:paddingBottom="20dp"
    android:background="@drawable/job_list_2"
    android:elevation="20dp"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="40dp"
   >

        <EditText
            android:textColor="@color/white"

            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginVertical="20dp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/edtRegUserName"
            android:digits="@string/app_lan"
            android:hint="اسم المستخدم"
            ></EditText>

        <EditText
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:hint="العمل"
            android:textColorHint="@color/white"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/edtRegJob"
            android:layout_marginVertical="20dp"
            ></EditText>

        <EditText
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:hint="كلمة المرور"
            android:gravity="end"
            android:textColorHint="@color/white"
            android:inputType="textPassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/edtRegPass"
            android:layout_marginVertical="20dp"
            ></EditText>


        <EditText
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:hint="اعد ادخال كلمة المرور"
            android:gravity="end"
            android:textColorHint="@color/white"
            android:layout_marginVertical="20dp"
            android:inputType="textPassword"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/edtRegPassConfirm"
            ></EditText>


    <Button
        android:background="@drawable/sender_bubble"
        android:elevation="5dp"
        android:layout_marginVertical="20dp"
        android:id="@+id/btnRegFinish"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="اتمم التسجيل">

    </Button>

</LinearLayout></ScrollView>